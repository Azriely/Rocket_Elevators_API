<!-- Request Form -->
<section id="requestForm">
    <div class="container">

        <header class="text-center mb-60">
            <h2>Request a quote</h2>
            <p class="lead font-lato">Rocket Elevator at your service 24h , 7 days a week.</p>
            <hr />
        </header>


        <div class="row">

            <!-- FORM -->
            <div class="col-md-8 col-sm-8">

                <h3>Let us know more about your project below:<strong></strong></h3>

                
                <form action="" method="post" enctype="multipart/form-data">
                    <fieldset>
                        <input type="hidden" name="action" value="contact_send" />


                    <div class="row" id="client-info">
                                    
                        <div class="col-md-6" id="fName">
                         
                            <label for="lblFname">First Name:</label>
                            <input type="text"  class="form-control" id="txtFname">
                    
                         </div>
                            
                         <div class="col-md-6" id="lname">
                         
                         <label for="lblLname">Last Name:</label>
                         <input type="text"  onkeyup="actionListener()"  class="form-control" id="txtFname">
                 
                      </div>
                      <div class="col-md-6" id="phoneNumber">
                         
                      <label for="lblPhone">Phone Number:</label>
                      <input type="tel"   class="form-control" id="txtFname">
              
                    </div>
                    <div class="col-md-6" id="email">
                         
                    <label for="lblEmail">Email:</label>
                    <input type="text"  class="form-control" id="txtFname">
            
                 </div>
                        
                        
                          
                        </div>
                        <div class="row">
                                <div class="col-md-8">
                                    <!-- Drop Menu -->
                                    <label for="buildings">Choose the coresponding building type:</label>

                                    <select onchange="mainFunction()" name="buildings" id="buildingsType">
                                    <option value="select">--- Please Select ---</option>
                                    <option value="residential">Residential</option>
                                    <option value="corporate">Corporate</option>
                                    <option value="commercial">Commercial</option>
                                    <option value="hybride">Hybride</option>
                                    </select>
                                    </div>
                                
                        </div>
                                <!-- Show The options Fields -->
                        <div class="row" id="step2" style="visibility: hidden">
                            
                                    <div class="col">

                                        <label><b>These are our options for a</b> <span id="selectedBuilding"> </span> Building:</label>
                                        
                                        
                                    </div>
                                    </br>
                        </div>
                            <!-- Fields Sections -->
                        <div class="row" id="input-fields" style="visibility: hidden">
                                    
                                        <div class="col-md-6" id="number-of-apartments" style="display: none;">
                                         
                                            <label for="lblApt">Number of number of Apartments:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57"  onkeyup="actionListener()"  class="form-control" id="txtApt">
                                    
                                         </div>
                                            
                                        <div class="col-md-6" id="number-of-floors" style="display: none;" >
                                            <label for="lblFloor">Number Floors:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57"  onkeyup="actionListener()" placeholder="" class="form-control" id="txtFloor">
                                            
                                        </div>		
                                        <div class="col-md-6" id="number-of-basement" style="display: none;" >
                                            <label for="lblBasement">Number of Basement:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57"  onkeyup="actionListener()" placeholder="" class="form-control" id="txtBasement">
                                            
                                        </div>	
                                        <div class="col-md-6" id="number-of-companies" style="display: none;">
                             
                                            <label for="lblCompagnies">Number of Companies:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57" onkeyup="actionListener()" placeholder="" class="form-control" id="txtCompanies">
                                    
                                         </div>
                                            
                                        <div class="col-md-6" id="number-of-parking-spots" style="display: none;" >
                                            <label for="lblParking">Number Parking Spots:</label>
                                            <input type="number"  step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57" onkeyup="actionListener()" placeholder="" class="form-control" id="txtParking">
                                            
                                        </div>		
                                        <div class="col-md-6" id="number-of-elevators" style="display: none;" >
                                            <label for="lblElevators">Number of Elevators:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57"  onkeyup="actionListener()" placeholder="" class="form-control" id="txtElevators">
                                            
                                        </div>	
                                        <div class="col-md-6" id="number-of-corporations" style="display: none;" >
                                            <label for="lblCorporation">Number of Corporation:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57" onkeyup="actionListener()"  placeholder="" class="form-control" id="txtCorporation">
                                            
                                        </div>		
                                        <div class="col-md-6" id="maximum-occupancy" style="display: none;" >
                                            <label for="lblOccupancy">Maximum Occupancy:</label>
                                            <input type="number" step="1" onkeypress="return event.charCode >= 48 && event.charCode <=57" onkeyup="actionListener()" placeholder="" class="form-control" id="txtOccupancy">
                                            
                                        </div>	
                                        <div class="col-md-6" id="business-hours" style="display: none;" >
                                            <label for="lblHours">Business Hours:</label>
                                            <input type="number" step="1" maxlength="2" onkeypress="return event.charCode >= 48 && event.charCode <=57" onkeyup="actionListener()" class="form-control" id="txtHours">
                                            
                                        </div>		
                                        
                                        
                        </div>
                    </br></br>
                    <div class="row">
                            <div class="col-md-6" id="step3" style="visibility: hidden;">
                                <h4>Please choose the type of the elevator:</h4>
                        </div>
                        <div class="col-md-6" id="step4" style="visibility: hidden;" >
                            <h4>Summary:</h4>
                    </div>
                    </div>
                    <div>
                            <div class="row" id="input-fields-2" style="visibility: hidden;">
                                
                                 <div class="col-md-6" onclick="actionListener()">
                                    
                                    <label class="radio">
                                        <input type="radio" name="radioSelect" id="standard" value="standard" checked>
                                        <i></i> Standard
                                    </label>
                                    <label class="radio">
                                        <input type="radio" name="radioSelect" id="premium" value="premium">
                                        <i></i> Premium
                                    </label>
                                    <label class="radio">
                                        <input type="radio" name="radioSelect" id="excelium"  value="excelium">
                                        <i></i> Excelium
                                    </label>
                                </div>
                                <div class="col-md-6" >
                                        
                                        <div style="display:flex; flex-direction: row;" id="elevator-amount">
                                            <label for="lblAmntElevator">N. of Elevator:</label>
                                            <input type="text" disabled  class="form-control" id="txtAmntElevator">
                                            
                                        </div>
                                        <div style="display:flex; flex-direction: row;" id="elevator-unit-price">
                                            <label for="lblPriceElevator">Price per Elevator:</label>
                                            <input type="text" disabled   class="form-control" id="txtPriceElevator">
                                            
                                        </div>
                                        <div style="display:flex; flex-direction: row;" id="elevator-total-price">
                                            <label for="lblElevatorTotalPrice">Total Price for Elevators:</label>
                                            <input type="text" disabled   class="form-control" id="txtElevatorTotalPrice">
                                            
                                        </div>	
                                        <div style="display:flex; flex-direction: row;" id="installation-fees">
                                            <label for="lblInstallationFee">Installation Fee:</label>
                                            <input type="text" disabled   class="form-control" id="txtInstallationFee">
                                            
                                        </div>	
                                        <div style="display:flex; flex-direction: row;" id="final-price">
                                            <label for="lblTotal">Total Cost:</label>
                                            <input type="text" disabled   class="form-control" id="txtTotal">
                                            
                                        </div>		
                                       
                                </div>
                                
                            
                            </div>
                            <div id="input-fields-3" style="visibility: hidden;">
                            
                            <button type="submit" class="btn btn-warning btn-lg">Submit Quote</button>

                            <button class="btn btn-warning btn-lg" onclick="emptyFields()">Reset</button>
            
                            </div>  
                    </div>
                    
                    
                                    
                            
                                
                                
                    </fieldset>

                    
                </form>

            </div>
            <!-- /FORM -->

        

        </div>

    </div>
</section>
<!-- /CONTACT -->
